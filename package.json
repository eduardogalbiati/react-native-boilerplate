{
  "name": "react-native-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "commit": "cz",
    "test": "npx jest",
    "test:watch": "npx jest -- -watch"
  },
  "dependencies": {
    "expo": "~45.0.0",
    "expo-splash-screen": "~0.15.1",
    "expo-status-bar": "~1.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.68.2",
    "react-native-web": "0.17.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/jest": "^28.1.5",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.66.13",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "jest": "^28.1.3",
    "jest-expo": "^45.0.1",
    "react-test-renderer": "17.0.2"
  },
  "resolutions": {
    "@types/react": "17.0.43"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-expo",
    "testPathIgnorePatterns" : [
      "__tests__/mock.tsx"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__/mock.tsx"
    ]
  }
}
